<section class="container py-5">
  <h1 class="mb-4">Admin Panel - Orders</h1>

  <table class="table table-striped table-hover">
      <thead class="table-dark">
          <tr>
              <th scope="col">Order ID</th>
              <th scope="col">Customer Name</th>
              <th scope="col">Total Bill</th>
              <th scope="col">Payment Method</th>
              <th scope="col">Order Status</th>
              <th scope="col">Actions</th>
          </tr>
      </thead>
      <tbody>
          <% orders.forEach(order => { %>
              <tr>
                  <td><%= order._id %></td>
                  <td><%= order.user ? order.user.username : 'Guest User' %></td>
                  <td>Rs. <%= order.totalBill.toFixed(2) %></td>
                  <td>
                      <%= order.paymentMethod === 'cash_on_delivery' ? 'Cash on Delivery' : 'Online Payment' %>
                  </td>
                  <td>
                      <% if (order.status === 'pending') { %>
                          <span class="badge bg-warning text-dark">Pending</span>
                      <% } else if (order.status === 'completed') { %>
                          <span class="badge bg-success">Completed</span>
                      <% } else { %>
                          <span class="badge bg-secondary">In Progress</span>
                      <% } %>
                  </td>
                  <td>
                      <!-- Link to view order details -->
                      <a href="/admin/order/<%= order._id %>" class="btn btn-info btn-sm">View</a>
                      
                      <!-- Option to update order status -->
                      <a href="/admin/order/<%= order._id %>/update" class="btn btn-warning btn-sm">Update</a>
                      
                      <!-- Option to delete an order -->
                      <form action="/admin/order/<%= order._id %>/delete" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">
                              Delete
                          </button>
                      </form>
                  </td>
              </tr>
          <% }) %>
      </tbody>
  </table>
</section>
