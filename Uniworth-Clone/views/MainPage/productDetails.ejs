<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <title>Document</title>
</head>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap');
    * {
        margin: 0;
        padding: 0;
        font-family: 'Franklin Gothic Medium';
    }

    body{
        background-color: #ECEFF2;
    }

    /*Nav-Bar*/

    .navbar{
        height: 35px;
    }

    .sliding-line {
        overflow: hidden; 

    }

    .sliding-line span {
        display: inline-block; 
        animation: sliding 20s linear infinite;
    }

    @keyframes sliding {
        0% {
            transform: translateX(750px);
        }
        100% {
            transform: translateX(-750px);
        }
    } 


    .custom-font-size {
        font-size: 1rem;
    }
    
    @media (max-width: 1040px) {
        .custom-font-size {
        font-size: 0.9rem; 
        }
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    @media (max-width: 324px) {
        .sliding-font-size {
        font-size: 10px;
        }
    }

    .account-nav-1 a {
        text-decoration: none;
        color: black;
    }

    /*Header*/


    header{
        background-color: white;
        width: 100%;
    }

    .main-header{
        height: 100px; 
        color: black;
        font-size: 18px;
    }


    .logo img{
        height: 80px;
    }

    .cart img{
        height: 20px;
    }

    @media (max-width: 992px) {
        .menu span, .cart span {
            display: none; 
        }

        .logo img {
            max-width: 80%; 
            max-height: 60px;
        }
    }

    .footer-class 
    {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 10px 20px;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
    }

    .footer-class p {
        margin: 0;
        font-size: 15px;
    }


    /* Product Section */
    .product-section {
            margin-top: 120px;
            margin-bottom: 40px;
        }
        .product-image img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .product-details {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .product-details h1 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        .product-details .description {
            font-size: 16px;
            color: #555;
        }
        .product-details ul li {
            font-size: 18px;
            margin-bottom: 10px;
        }
        .btn-cart {
            background-color: rgb(120, 6, 29);
            color: white;
        }

        .btn-cart:hover {
            background-color: rgb(199, 79, 79);
        }
        .btn-back {
            margin-top: 45px;
            border-color: #004085;
            color: #004085;
        }
        .btn-back:hover {
            background-color: #003366;
            color: #fff;
        }
    
    
</style>

<body>

    <!-- NavBar -->
    <nav class="navbar navbar-expand-sm d-flex align-content-center">
        <div class="container-fluid">
            <div class="navbar-nav w-100 d-flex justify-content-lg-between justify-content-center " style="height: 35px;">
                <!-- First item (Phone) -->
                <li class="nav-item d-none d-lg-flex align-content-center col-lg-4 ms-2">
                    <a class="nav-link" href="tel:+924211179456">
                        <i class="fa-solid fa-phone"></i>
                        <span class="custom-font-size" >+92 42 111 79 456</span>
                    </a>
                    <a class="nav-link" href="https://wa.me/923454037778" target="_blank">
                        <i class="fa-brands fa-whatsapp whatsapp-icon"></i>
                        <span class="custom-font-size" >+92-345-4037778</span>
                    </a>
                </li>
      
                <!-- Second item (sliding-line) -->
                <div class="nav-item sliding-line d-flex align-items-center justify-content-center">
                    <span class="text-turncate sliding-font-size">Free Delivery Available over Rs. 1500 order</span>
                </div>
      
                <!-- Third item (My Account) -->
                <li class="account-nav-1 nav-item d-none d-lg-flex col-lg-4 justify-content-end align-items-center me-3">
                    <i class="fa-regular fa-user me-1 account-nav text-dark"></i>
                    <a href="Login.HTML">My Account</a>
                </li>
                
            </div>
        </div>
    </nav>


    <!-- Header -->
    <header class="position-absolute zindex-header">
        <div class="container-fluid">
            <div class="row align-content-center main-header ">
                <!-- Menu Section -->
                <div class="col-3 col-md-3 col-lg-3 col-xl-3 d-flex justify-content-start ">
                    <div class="menu d-flex align-items-center ms-3">
                        <i class="fa-solid fa-bars me-2"></i> 
                        <span>Menu</span>
                    </div>
                </div>
    
                <!-- Logo Section -->
                <div class="col-6 col-md-6 col-lg-6 col-xl-6 text-center">
                    <div class="logo">
                        <img src="/bootstrap-work/images/home_logo.png" alt="Logo" class="img-fluid mx-auto d-block" > 
                    </div>
                </div>
    
                <!-- Cart Section -->
                <div class="col-3 col-md-3 col-lg-3 col-xl-3  d-flex justify-content-end">
                    <ul class="cart list-unstyled d-flex align-items-center m-0 me-3">
                        <li class="me-4 d-flex align-items-center">
                            <img src="/bootstrap-work/images/Black_Search.png" alt="Search Icon" class="me-2"> 
                            <span>Search</span>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="fa-solid fa-cart-shopping me-2"></i> 
                            <span>Bag</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    

      <!-- Product Section -->
    <section class="container product-section">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <div class="product-image">
                    <img src="<%= product.image %>" alt="<%= product.name %>">
                </div>
            </div>
            
            <!-- Product Details -->
            <div class="col-md-6">
                <div class="product-details">
                    <h1><%= product.name %></h1>
                    <p class="description"><%= product.description %></p>
                    <ul class="list-unstyled">
                        <li><strong>Price:</strong> <%= product.price %></li>
                        <li><strong>Fabric:</strong> <%= product.fabric %></li>
                        <li><strong>Color:</strong> <%= product.colour %></li>
                        <li><strong>SKU:</strong> FS27RF</li>
                    </ul>

                    <div class="d-flex gap-3">
                        <form action="/add-to-cart/<%= product._id %>" method="POST" class="w-50">
                            <input type="number" name="quantity" value="1" min="1" class="form-control mb-2">
                            <button type="submit" class="btn btn-cart w-100">
                              <i class="fa-solid fa-cart-plus me-2"></i>Add to Cart
                            </button>
                        </form>
                        <a href="/mainpage/<%= product.category._id %>" class="btn btn-back w-50 h-50 ">
                            <i class="fa-solid fa-arrow-left me-2"></i>Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <footer class="footer-class text-white text-center py-2">
        <div class="row justify-content-between align-items-center text-center text-md-start">
            <div class="copywrite col-12 col-md-6">
                <p class="mb-0">UNIWORTH DRESS CO. All Rights Reserved.</p>
            </div>
            <div class="visa col-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center">
                <p class="mb-0 me-2">100% Safe Checkout</p>
                <img src="/bootstrap-work/images/15.png" alt="Payment Options" class="img-fluid" style="max-width: 200px;">
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function fixFooter() {
            const footer = document.querySelector('.footer-class');
            const viewportHeight = window.innerHeight; // Full viewport height
            const bodyHeight = document.body.scrollHeight; // Total page height

            // If the body is shorter than the viewport, make footer stick to the bottom
            if (bodyHeight < viewportHeight) {
                footer.style.position = 'fixed';
                footer.style.bottom = '0';
                footer.style.left = '0';
                footer.style.width = '100%';
            } else {
                footer.style.position = 'relative'; // Restore normal flow if content exceeds viewport
            }
        }

        // Run on page load and resize
        window.addEventListener('load', fixFooter);
        window.addEventListener('resize', fixFooter);
    </script>

</body>
</html>